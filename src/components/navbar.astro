---
const links = [
  { href: "#inicio", label: "Inicio" },
  { href: "#features", label: "Información" },
  { href: "#contacto", label: "Contacto" }
];
---
<nav class="w-full sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-12 relative">
    <div class="flex justify-between items-center h-16">
      <!-- LOGO -->
      <a href="/" class="font-bold text-xl text-primary">FreeBook</a>
      <!-- ENLACES DESKTOP -->
      <div class="hidden md:flex space-x-4">
        {links.map(link => (
          <a href={link.href} class="text-primary font-medium">{link.label}</a>
        ))}
      </div>
      <!-- BOTÓN HAMBURGUESA/CERRAR -->
      <button
        id="menu-btn"
        class="md:hidden flex flex-col justify-center items-center w-10 h-10"
        aria-label="Abrir menú"
        type="button"
        aria-expanded="false"
      >
        <!-- Hamburguesa (menu) -->
        <svg id="icon-menu" class="block w-7 h-7 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <!-- X (cerrar) -->
        <svg id="icon-close" class="hidden w-7 h-7 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <!-- MENÚ MÓVIL -->
    <div
      id="mobile-menu"
      class="md:hidden hidden flex-col items-center w-full bg-white shadow absolute left-0 top-16 z-40"
    >
      {links.map(link => (
        <a
          href={link.href}
          class="block py-3 w-full text-center border-b  text-primary hover:bg-primary/10 font-medium"
        >{link.label}</a>
      ))}
    </div>
  </div>
  <script is:inline>
    const btn = document.getElementById('menu-btn');
    const menu = document.getElementById('mobile-menu');
    const iconMenu = document.getElementById('icon-menu');
    const iconClose = document.getElementById('icon-close');

    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
      const abierto = menu.classList.contains('hidden') === false;
      btn.setAttribute('aria-expanded', abierto);

      // Icono hamburguesa <-> cerrar
      if (abierto) {
        iconMenu.classList.add('hidden');
        iconClose.classList.remove('hidden');
      } else {
        iconMenu.classList.remove('hidden');
        iconClose.classList.add('hidden');
      }
    });
  </script>
</nav>
